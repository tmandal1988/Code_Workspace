//IMU Filter Task variables
asm(" .align 4 ");
DWORD IMU_Filter_LoopStk[USER_TASK_STK_SIZE] __attribute__((aligned(4)));



extern "C" {
void UserMain(void * pd);
//void SetIntc(int intc, long func, int source, int level);
